{
  "name": "presidium-v0.0.0.1",
  "version": "0.0.0.1",
  "description": "Unified messaging platform. Email + SMS + P2P. Quantum-ready PQC encryption. CRDT offline-first. AI-powered chat with emotion detection.",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=backend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf node_modules backend/node_modules backend/dist frontend/node_modules frontend/dist",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down -v",
    "deploy:heroku": "git push heroku main",
    "deploy:vercel": "vercel --prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergynia96-netizen/presidium-v0.0.0.1.git"
  },
  "keywords": [
    "messaging",
    "email",
    "sms",
    "p2p",
    "encryption",
    "pqc",
    "post-quantum",
    "crdt",
    "offline-first",
    "ai",
    "nlp",
    "unified-inbox"
  ],
  "author": "sergynia96-netizen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sergynia96-netizen/presidium-v0.0.0.1/issues"
  },
  "homepage": "https://github.com/sergynia96-netizen/presidium-v0.0.0.1#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
